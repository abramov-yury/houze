include checkout-form--default
include checkout-form--service
include checkout-form--price
include checkout-form--tariffs
include checkout-form--payment

mixin checkout-section(title, formName)

  section.checkout-section
    h2.visually-hidden #{title}
    case formName
      when 'service'
        +checkout-form--service
      when 'price'
        +checkout-form--price
      when 'tariffs'
        +checkout-form--tariffs
      when 'payment'
        +checkout-form--payment
      when 'basic'
      default
        +checkout-form--default
