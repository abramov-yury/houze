mixin rating(value, modifier='medium', parent=false)

  -
    name = 'rating'
    className = `${name} ${name}--${modifier}`
    className = parent ? `${parent}__${name} ${className}` : className

    color = 'var(--color-accent)';
    hiddenText = `Рейтинг ${value} из 5`

    if (!value) {
      color = 'var(--color-disable)';
      hiddenText = 'Нет рейтинга'
    }

  div(class = className)
    span.visually-hidden #{hiddenText}

    svg.rating__star(width='14' height='14' role='presentation' aria-hidden='true' style=`fill: ${color}`)
      use(href='#rating-icon')

    if(value)
      span(class=`${name}__value`) #{value}
