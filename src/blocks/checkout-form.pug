include form-fieldset--contacts
include form-fieldset--object
include form-fieldset--photo
include form-fieldset--service
include form-fieldset--conditions
include form-fieldset--settlement
include form-fieldset--price
include form-fieldset--showing
include form-fieldset--tariffs
include form-fieldset--payment

mixin checkout-form(cls)

  -
    const name = 'checkout-form';
    className = `${cls}__form ${name}`;

  form(class=className)
    section.checkout-form__page.checkout-form__page--active(data-target='1')
      h2.visually-hidden Основные данные
      +form-fieldset--contacts
      +form-fieldset--object
      +form-fieldset--photo
    section.checkout-form__page(data-target='2')
      h2.visually-hidden Удобства и условия
      +form-fieldset--service
      +form-fieldset--conditions
      +form-fieldset--settlement
    section.checkout-form__page(data-target='3')
      h2.visually-hidden Цена
      +form-fieldset--price
      +form-fieldset--showing
    section.checkout-form__page(data-target='4')
      h2.visually-hidden Тарифы
      +form-fieldset--tariffs
    section.checkout-form__page(data-target='5')
      h2.visually-hidden Оплата
      +form-fieldset--payment

    .checkout-form__controls
      button.checkout-form__button.button.button--simple.button--hidden(type='button' data-name='cc-back' data-direction='-1') Назад
      button.checkout-form__button.button.button--secondary(type='button' data-name='cc-forward' data-direction='+1') Далее
      button.checkout-form__button.button.button--secondary.button--hidden(type='button' data-name='cc-pay') Оплатить
