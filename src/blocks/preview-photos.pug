include ../templates/picture

mixin preview-photos(photos, parent=false)

  -
    const name = 'preview-photos'
    className = getClassName(name, parent)
    linkClassName = (item) => item.active ? `${name}__link ${name}__link--active` : `${name}__link`

  ul(class=className)
    each item in photos
      li(class=`${name}__item`)
        a(class=linkClassName(item) href="#")
          +picture(item.img, 'img/card/', {width: 240, height: 144}, item.alt, name)
