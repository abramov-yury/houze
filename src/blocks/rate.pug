mixin rate(value, link='#', small=false, parent=false)

  -
    const name = 'rate'
    className = small ? `${name} ${name}--small` : name
    className = parent ? `${parent}__${name} ${className}` : className

  if(value)
    a(class=className href=link)
      | (&#32;
      span(class=`${name}__text`) #{value} #{inflictWord(value, ['Отзыв', 'Отзыва', 'Отзывов'])}
      | &#32;)
  else
    span(class=`${className} ${name}--empty`) Нет отзывов
