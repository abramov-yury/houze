include progress
include checkout-section

include checkout-form--basic
include checkout-form--service
include checkout-form--price

mixin checkout

  article.checkout
    h1.checkout__title  Новое объявление
    .checkout__progress
      +progress
    form.checkout__form(action='#' method='POST')
      +checkout-form--basic
      +checkout-form--service
      +checkout-form--price
      +checkout-section('Тарифы', 'tariffs')
      +checkout-section('Оплата', 'payment')
