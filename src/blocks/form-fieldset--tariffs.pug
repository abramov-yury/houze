include tariff-plan

mixin form-fieldset--tariffs

  fieldset.checkout-form__fieldset.form-fieldset
    legend.form-fieldset__caption Тарифы

    .form-fieldset__tariffs-plans

      input.visually-hidden(type='radio' name='tariff-plan' value='tariff-plan-standard', aria-describedby='tariff-plan-standard' checked)
      input.visually-hidden(type='radio' name='tariff-plan' value='tariff-plan-premium', aria-describedby='tariff-plan-premium')
      input.visually-hidden(type='radio' name='tariff-plan' value='tariff-plan-max', aria-describedby='tariff-plan-max')

      +tariff-plan({
        active: true,
        title: 'Стандарт', price: '15 ₽/сутки', id: 'tariff-plan-standard', options: [
          'Стандартное размещение на странице объявлений',
          'Доступ к кабинету Houze Pro',
          'Автопродление объявлений'
        ]
      })

      +tariff-plan({
        title: 'Премиум', price: '25 ₽/сутки', hit: true, id: 'tariff-plan-premium', options: [
          'Размещение на первой странице объявлений',
          'Выделение цветом',
          'Помощь в составлении объявления'
        ]
      })

      +tariff-plan({
        title: 'Стандарт', price: '35 ₽/сутки', id: 'tariff-plan-max', options: [
          'Закрепление в верхней части страницы',
          'Выделение цветом',
          'Выделение большим размером'
        ]
      })
